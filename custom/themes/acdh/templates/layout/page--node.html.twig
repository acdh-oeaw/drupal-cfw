{% include directory ~ '/templates/layout/header.html.twig' %}
<div class="container">
  <main role="main" class="node">
    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

    <div class="layout-content col-block col-lg-12">
      <div class="col-block-wrapper">

            <!--- Start Breadcrumbs -->
            {% if page.breadcrumbs %}
                  {{ page.breadcrumbs }}
            {% endif %}
            <!---End Breadcrumbs -->	
            <div class="left-sidebar col-block col-lg-3 col-md-4 col-sm-12" >
                <div class = {{sidebarfirst}} >
                    {{ page.sidebar_first }}
                </div>
            </div> 
                
            {{ page.content }}
	        
        </div>
    </div>{# /.layout-content #}


  </main>
</div>{# /.layout-container #}

