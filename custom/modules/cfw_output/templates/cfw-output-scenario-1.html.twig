                {{ 'Your <b>Personal Data</b> is any information related to you. <b>Processing</b> is any operation performed on the data.'|trans }}
                <br><br>
                {{ "According to the <b>Transparency Principle</b>, this document will provide you with information about the processing of your personal data as required by Art. 12, 13, and 14 of the GDPR."|trans }}
            </p>
        </div>

        <!-- [if: Individual]   -->
        {% if data.are_you_collecting_data_.value.0 == 'q1d_aycd_1' %}
            <div class="row">
                <div class='col-lg-12'>
                    <h5><b>{{ "Who am I and how can you contact me?"|trans }} </b></h5>
                <!-- [Individual_name]   -->
                    <b>{{ "Name"|trans }}: </b> {{ data.name.value.0 }}<br />
                    <b>{{ "Address"|trans }}: </b>{{ data.contact_details_address_.value.0 }}<br/>
                    <b>{{ "E-mail"|trans }}: </b> <a href="mailto:{{ data.contact_details_e_mail_.value.0 }}">{{ data.contact_details_e_mail_.value.0 }}</a>
                    {% set controller_email = data.contact_details_e_mail_.value.0 %}<br/>
                </div>
            </div>  
        {% endif %}

        <!-- [if: Institution]   -->
        {% if data.are_you_collecting_data_.value.0 == 'q1d_aycd_2' %}
            <div class="row">
                <div class='col-lg-12'>
                    <h5><b>{{ "Who are we and how can you contact us?"|trans }}</b></h5>
                    <!-- [Institution_name]  -->
                    <b>{{ "Name"|trans }}: </b>{{ data.name_.value.0 }}<br/>
                    <b>{{ "Address"|trans }}: </b>{{ data.contact_details_address_institution.value.0 }}<br/>
                    <b>{{ "E-mail"|trans }}: </b> <a href="mailto:{{ data.contact_details_e_mail_institutuion.value.0 }}">{{ data.contact_details_e_mail_institutuion.value.0 }}</a>
